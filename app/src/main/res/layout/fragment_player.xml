<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment"
    android:background="#091227">

    <ImageView
        android:id="@+id/img_back"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/ic_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_head"
        android:layout_alignTop="@id/img_back"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#DBE6FF"
        android:fontFamily="@font/gilroy_medium"
        android:text="Playing Now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/img_song_image"
        android:layout_marginTop="60dp"
        android:layout_below="@id/txt_head"
        android:layout_centerHorizontal="true"
        android:src="@drawable/poster"
        android:layout_width="261dp"
        android:layout_height="261dp"/>

    <TextView
        android:id="@+id/txt_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_song_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Believer"
        android:textColor="#EAF0FF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_song_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_song_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/gilroy_light"
        android:text="IMAGINE DRAGON"
        android:textColor="#B3A5C0FF"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_like"
        android:layout_marginTop="4dp"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@id/txt_song_title"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_volume"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/txt_song_artist"
        android:src="@drawable/ic_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_shuffle"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_shuffle"
        android:layout_alignTop="@id/img_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_repeat"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_repeat"
        android:layout_toLeftOf="@id/img_shuffle"
        android:layout_alignTop="@id/img_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_current_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_volume"
        android:layout_alignLeft="@id/img_volume"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/gilroy_light"
        android:text="00:50"
        android:textColor="#B3A5C0FF"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/timeLine"
        android:layout_alignTop="@id/txt_current_play_time"
        android:layout_toRightOf="@id/txt_current_play_time"
        android:layout_toLeftOf="@id/txt_total_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_total_play_time"
        android:fontFamily="@font/gilroy_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_volume"
        android:layout_alignRight="@id/img_shuffle"
        android:layout_marginTop="60dp"
        android:text="04:00"
        android:textColor="#B3A5C0FF"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/img_pause"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:src="@drawable/ic_pause" />

    <ImageView
        android:id="@+id/img_prev"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@id/img_pause"
        android:layout_alignTop="@id/img_pause"
        android:layout_alignBottom="@id/img_pause"
        android:src="@drawable/ic_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_next"
        android:layout_marginLeft="40dp"
        android:layout_alignBottom="@id/img_pause"
        android:layout_toRightOf="@id/img_pause"
        android:layout_alignTop="@id/img_pause"
        android:src="@drawable/ic_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>